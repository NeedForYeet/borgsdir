<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.auerbauerjensch.borgsdir">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/my_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_activity_register"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".BrowseItemsActivity"
            android:label="@string/title_activity_browse_items"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ProductDetailActivity"
            android:parentActivityName=".BrowseItemsActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ContactSellerActivity"
            android:label="@string/title_activity_contact_seller"
            android:parentActivityName=".ViewProfileActivity"/>
        <activity
            android:name=".FullscreenGalleryView"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Gallerie"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".ViewProfileActivity"
            android:label="@string/title_activity_view_profile"
            android:parentActivityName=".BrowseItemsActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".BorrowActivity"
            android:label="Gegenstand Herborgen"
            android:parentActivityName=".BrowseItemsActivity"/>
    </application>

</manifest>